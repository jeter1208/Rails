<h1>商品列表</h1>
<%= link_to "新增商品",new_product_path  %>
<%= @products.each do |product| %>
  <li>
    <%= link_to product.title,product_path(product)%>
    <%= link_to "編輯", edit_product_path(product) %>
    <%= link_to "刪除", product_path(product)
                        method: delete 
                        data: { confirm "確定嗎?", id: product.id } %>
  </li>
  
<% end %>