<% if @product.errors.any?%>
  <ul>
    <% product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end%>
  </ul>
<% end %>

<%= form_for(product) do |i| %>
  <%= i.label :title ,"商品名稱" %>
  <%= i.text_field :title %>

  <%= i.label :price , "價格" %>
  <%= i.text_field :price %>

  <%= i.label :describe , "商品描述" %>
  <%= i.text_area :describe %>

  <%= i.label :is_active, "是否上架" %>
  <%= i.check_box :is_active %>

  <%= i.submit "送出" %>
  <% end %>